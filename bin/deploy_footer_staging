#!/bin/bash
set -eo pipefail

NODE_ENV=development yarn
NODE_ENV=production yarn run build:publish:footer

echo '+++ Compiling & Building Main Navigation'

aws s3 sync \
  ./footer/build s3://rcl-pg/staging/footer/ \
  --acl=public-read \
  --cache-control max-age=0 \
  --exclude '.DS_Store'

aws s3 sync \
  ./footer/zip s3://rcl-pg/staging/footer/zip/ \
  --acl=public-read \
  --cache-control max-age=0 \
  --content-encoding gzip \
  --exclude '.DS_Store'

echo "Deployed Footer to http://rcl.policygenius.com/staging/footer/"
