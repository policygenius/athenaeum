#!/bin/bash
set -eo pipefail

echo '+++ Build main_nav'
NODE_ENV=development yarn
NODE_ENV=production yarn run build:nav:styleguide
NODE_ENV=production yarn run build:publish:nav

cp ./styleguide/main_nav/build/index.html ./main_nav/build/index.html
cp ./styleguide/main_nav/build/styleguide_bundle.js ./main_nav/build/styleguide_bundle.js

echo '+++ Deploying main_nav styleguide latest to S3'
aws s3 sync \
  ./styleguide/main_nav/build s3://rcl-pg/latest/main_nav/ \
  --acl=public-read \
  --cache-control max-age=0 \
  --exclude '.DS_Store'

echo "Deployed Main Nav to http://rcl.policygenius.com/latest/main_nav/index.html"

echo '+++ Compiling & Building Main Navigation'

aws s3 sync \
  ./main_nav/build s3://rcl-pg/main_nav/ \
  --acl=public-read \
  --cache-control max-age=0 \
  --exclude '.DS_Store'

aws s3 sync \
  ./main_nav/zip s3://rcl-pg/main_nav/zip/ \
  --acl=public-read \
  --cache-control max-age=0 \
  --content-encoding gzip \
  --exclude '.DS_Store'

echo "Deployed Main Nav to http://rcl.policygenius.com/main_nav/index.html"
