#!/bin/bash

echo "Checking for new todos.."

grep -or  'TODO.*' \
  --exclude-dir=node_modules \
  --exclude-dir=public \
  --exclude-dir=docs \
  --exclude-dir=lib \
  --exclude-dir=bin \
  --exclude-dir=.cache . \
  --exclude-dir=webpack-bundle-report \
  --exclude-dir=coverage \
  --exclude-dir=.git \
  | awk -F":" {'print "- [ ] **" substr($0,index($0,$2))"** : "$1'} > todo.md
